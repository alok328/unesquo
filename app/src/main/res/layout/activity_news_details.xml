<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetails"
    android:background="@drawable/backgrnd">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/imageNewsDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logounesquo"
                />
            <LinearLayout
                android:background="#3c0e0d0e"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleNewsDetail"
                    android:text="Title"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/descriptionNewsDetail"
                    android:text="asdamnfbasd"
                    android:layout_below="@+id/titleNewsDetail"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:scrollbars="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </RelativeLayout>


</android.support.v7.widget.CardView>